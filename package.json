{
	"name": "bitrise-workflow-editor",
	"version": "1.0.0",
	"description": "Bitrise workflow editor",
	"main": "index.js",
	"scripts": {
		"karma": "karma start spec/karma.conf.js",
		"test": "MODE=WEBSITE npm run build && npm run karma",
		"test-watch": "onchange -ik -d 500 'source/javascripts/**/*.js.erb' -- npm test",
		"build": "webpack --bail -p",
		"build:prod": "NODE_ENV=prod npm run build",
		"start:dev": "webpack-dev-server",
		"e2e:dashboard": "cypress open",
		"e2e:run": "cypress run",
		"e2e:run-api": "PORT=4000 ./_scripts/run_api.sh ./spec/integration/test_bitrise.yml",
		"e2e": "concurrently -k --kill-others-on-fail \"npm:e2e:run-api\" \"npm:e2e:run\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitrise-io/bitrise-workflow-editor.git"
	},
	"keywords": [
		"workflow",
		"steps"
	],
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/bitrise-io/bitrise-workflow-editor/issues"
	},
	"homepage": "https://github.com/bitrise-io/bitrise-workflow-editor#readme",
	"dependencies": {
		"@bitrise/bitkit": "^4.2.1",
		"@bitrise/steplib-search": "^2.2.0",
		"angular": "^1.7.9",
		"angular-animate": "1.7.9",
		"angular-cookies": "1.7.9",
		"angular-elastic": "^2.5.1",
		"angular-route": "1.7.9",
		"angular-sanitize": "1.7.9",
		"classnames": "^2.2.6",
		"esprima": "^3.1.3",
		"intersection-observer": "^0.7.0",
		"jquery": "^3.4.1",
		"js-yaml": "^3.13.1",
		"monaco-editor": "^0.18.1",
		"ng-showdown": "^1.1.0",
		"prop-types": "^15.7.2",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react2angular": "^4.0.6",
		"showdown": "^1.9.1",
		"underscore": "^1.9.2"
	},
	"devDependencies": {
		"@types/classnames": "^2.2.9",
		"@types/react": "^16.9.19",
		"@types/react-dom": "^16.9.5",
		"@types/underscore": "^1.9.4",
		"angular-mocks": "1.7.2",
		"concurrently": "^5.1.0",
		"copy-webpack-plugin": "^5.1.1",
		"css-loader": "^3.4.2",
		"cypress": "^4.1.0",
		"cypress-cucumber-preprocessor": "^2.0.1",
		"file-loader": "^5.0.2",
		"jsdom": "^15.2.0",
		"karma": "^4.4.1",
		"karma-cli": "^2.0.0",
		"karma-coverage": "^2.0.1",
		"karma-jasmine": "^3.1.0",
		"karma-jsdom-launcher": "^8.0.0",
		"karma-spec-reporter": "^0.0.32",
		"mini-css-extract-plugin": "^0.9.0",
		"monaco-editor-webpack-plugin": "^1.7.0",
		"node-sass": "^4.13.1",
		"null-loader": "^3.0.0",
		"onchange": "^6.1.0",
		"postcss-loader": "^3.0.0",
		"prettier": "1.19.1",
		"sass-loader": "^8.0.2",
		"shell-loader": "^1.2.0",
		"style-loader": "^1.1.3",
		"terser-webpack-plugin": "^2.3.5",
		"ts-loader": "^6.2.1",
		"typescript": "^3.7.5",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10",
		"webpack-dev-server": "^3.10.2"
	},
	"prettier": {
		"useTabs": true,
		"printWidth": 120
	},
	"cypress-cucumber-preprocessor": {
		"nonGlobalStepDefinitions": true
	}
}
